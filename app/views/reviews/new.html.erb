<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
          <h1>Add review for <%= @restaurant.name %></h1>
          <%= simple_form_for([@restaurant, @review]) do |f| %>
            <%= f.input :content  %>
            <%= f.input :rating  %>
            <%= f.submit "Submit review" %>
          <% end %>
        </div>
    </div>
</div>